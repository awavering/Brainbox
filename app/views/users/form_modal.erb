<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">Add student</h3>
</div>
<div class="modal-body">

  <%= form_for(@user, :html => {:class => 'form-horizontal'}, :validate => true, :remote => true) do |f| %>
    <div class="field control-group">
      <%= f.label :first, :class => 'control-label', :for => 'user_first' %>
      <div class="controls"><%= f.text_field :first %></div>
    </div>
    <div class="field control-group">
      <%= f.label :last, :class => 'control-label', :for => 'user_last' %>
      <div class="controls"><%= f.text_field :last %></div>
    </div>
    <div class="field control-group">
      <%= f.label :email, :class => 'control-label', :for => 'user_email' %>
      <div class="controls"><%= f.text_field :email %></div>
    </div>
    <div class="actions" style="margin-top:20px; margin-left: 180px;">
      <%= f.submit 'Save', :class => 'btn btn-success',  :id => 'save-user' %> <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  <% end %>

  <div class="pull-right">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
